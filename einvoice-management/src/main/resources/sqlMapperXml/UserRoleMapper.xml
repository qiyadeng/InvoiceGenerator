<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.management.mapper.UserRoleMapper">

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        id, user_id AS userId, role_id AS roleId
    </sql>

    <select id="selectByUserId" resultType="UserRole" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from user_role
        where user_id = #{userId}
    </select>

    <select id="selectRoleIdListByUserId" resultType="java.lang.Long" parameterType="java.lang.Long">
        select 
        role_id AS roleId
        from user_role
        where user_id = #{userId}
    </select>

</mapper>